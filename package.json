{
  "name": "music-player-pwa",
  "version": "0.1.0",
  "private": true,
  "description": "Minimal React + TypeScript PWA music player (learning build)",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
